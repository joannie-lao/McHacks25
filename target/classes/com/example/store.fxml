<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.StoreController" stylesheets ="@styles.css">
    <children>
        <Label text="Store" />
        <Button fx:id="homeButton" text="Home" onAction="#switchToHome">
        <graphic>
            <ImageView fitWidth = "50" fitHeight = "50">
               <image>
                  <Image url="@cart.png" />
               </image>
            </ImageView>
         </graphic>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
