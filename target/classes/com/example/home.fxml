<GridPane fx:controller="com.example.HomeController" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
stylesheets ="@styles.css" alignment="center" hgap="10" vgap="10">
    <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <children>
            <Label text="Home" />
        </children>
        <padding>
            <Insets top="370" right="10" bottom="10" left="475"/>
        </padding>
    </VBox>
    <Button fx:id="storeButton" onAction="#switchToStore" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
        <graphic>
            <ImageView fitWidth="50" fitHeight="50">
                <image>
                    <Image url="@cart.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <VBox fx:id="habitsContainer" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM" spacing="10">
    </VBox>
</GridPane>

